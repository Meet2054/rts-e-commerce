rules_version = '2';

// Firebase Storage Security Rules for RTS E-commerce
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read all images
    match /{allPaths=**} {
      allow read: if true; // Public read access for all images
    }
    
    // Allow authenticated admin users to upload/manage product images
    match /products/{productImage} {
      // Allow write (upload, update, delete) for authenticated users
      allow write: if request.auth != null;
      
      // Validate file type and size
      allow write: if request.auth != null 
        && resource == null // New file upload
        && imageValidation();
      
      // Allow updates and deletes for authenticated users
      allow write: if request.auth != null 
        && resource != null; // Existing file
    }
    
    // Helper function to validate image uploads
    function imageValidation() {
      return request.resource.size < 5 * 1024 * 1024 // Max 5MB
        && request.resource.contentType.matches('image/.*'); // Only images
    }
  }
}